<% if @pizza.errors.any? %>
    <% @pizza.errors.messages.each do |message| %>
        <% if !message.last.first.include?("must exist") %>
            <p style="color: red;">🧐 <%= message.last.first %> 🤨😂</p>
        <% end %>
    <% end %>
<% end %>

<%= form_for(@pizza) do |f| %>
    
    <h3>Name Your Pizza:</h3>
    <%= f.text_field :name %>

    <h3>Choose Size:</h3>
    <select name="pizza[size]" id="pizza_size">
        <option value="">Please select</option>
        <option value="Small">Small</option>
        <option value="Medium">Medium</option>
        <option value="Large">Large</option>
    </select>

    <h3>Select Toppings:</h3>
    <div id= "checkboxes">
    <%= f.collection_check_boxes :topping_ids, Topping.all, :id, :name %>
    </div>
    
    
    <h3>Select Crust:</h3>
    <%= f.collection_select :crust_id, Crust.all, :id, :dough, prompt: true %>
    
    <h3>Select Sauce:</h3>
    <%= f.collection_select :sauce_id, Sauce.all, :id, :flavor, prompt: true %>

    <%= f.hidden_field :user_id, value: @user.id %>
        


    <br><br><br>
    <section class="btn">
    <%= f.submit "Put Your Pizza in the Oven!" %>
    </section>
<% end %>