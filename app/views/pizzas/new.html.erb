<%= form_for(@pizza) do |f| %>
    
    <h3>Name Your Pizza:</h3>
    <%= f.text_field :name %>

    <h3>Choose Size:</h3>
    <select name="pizza[size]" id="pizza_size">
        <option value="">Please select</option>
        <option value="Small">Small</option>
        <option value="Medium">Medium</option>
        <option value="Large">Large</option>
    </select>

    <h3>Select Toppings:</h3>
    <%= f.collection_check_boxes :topping_ids, Topping.all, :id, :name %>
    
    <h3>Select Crust:</h3>
    <%= f.collection_select :crust_id, Crust.all, :id, :dough, prompt: true %>
    
    <h3>Select Sauce:</h3>
    <%= f.collection_select :sauce_id, Sauce.all, :id, :flavor, prompt: true %>

    <%= f.hidden_field :user_id, value: @user.id %>

    <br><br><br>
    <%= f.submit "Put Your Pizza in the Oven!" %>

    <img id="pic on new page"src="https://guidetoiceland.imgix.net/410514/x/0/the-7-best-pizza-places-in-reykjavik-1?auto=compress%2Cformat&amp;ch=Width%2CDPR&amp;dpr=1&amp;ixlib=php-3.0.0&amp;w=883&amp;s=2f0b4dfd1a503e0ccc8aadced34ad96c"alt="pic of pizza">
<% end %>