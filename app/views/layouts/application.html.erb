<!DOCTYPE html>
<html>
  <head>
    <title>YumYum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Yum YUM!</h1>
    <%= button_to "All Pizzas", pizzas_path, method: :get %>
    <%= button_to "Order New Pizza", new_pizza_path, method: :get %>
    <%= button_to "Analytics", "analytics", method: :get %>
    <br> <%= yield %>
  </body>
</html>
