<h2>Signup!</h2>

<% if @user.errors.any? %>
    <% @user.errors.messages.each do |message| %>
        <p style="color: red;">🧐 <%= message.last.first %> 🤨😂</p>
    <% end %>
<% end %>

<%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br><br>
    
    <%= f.label :username %>
    <%= f.text_field :username %> <br><br>
    
    <%= f.label :password %>
    <%= f.password_field :password %> <br><br>
    
    <%= f.submit "Create your Za-ly account" %>
<% end %>