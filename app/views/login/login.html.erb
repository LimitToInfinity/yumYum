<h2 id="login_and_signup_header">Login</h2>

<% if @error %>
    <p style="color: red;">­ЪДљ <%= @error %> ­Ъце­Ъўѓ</p>
<% end %>

<div class="login_and_signup_forms">
    <%= form_for(@user, url: { controller: "sessions", action: "create" }) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username %> <br><br>
        
        <%= f.label :password %>
        <%= f.password_field :password %> <br><br>

        <%= f.submit "Login" %>
    <% end %>
</div>